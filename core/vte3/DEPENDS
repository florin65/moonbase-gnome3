depends pcre2
depends gtk+-3
depends vala
depends intltool
depends meson

optional_depends icu4c \
                 "-D icu=true" \
                 "-D icu=false" \
                 "for ICU support"

optional_depends gnutls \
                 "-D gnutls=true" \
                 "-D gnutls=false" \
                 "for GNUTLS support"

optional_depends fribidi \
                 "-D fribidi=true" \
                 "-D fribidi=false" \
                 "for bidirectional text support"

optional_depends gtk-doc \
                 "-D docs=true" \
                 "-D docs=false" \
                 "for building documentation" \
                 "n"

optional_depends gobject-introspection \
                 "-D gir=true" \
                 "-D gir=false" \
                 "for object introspection" \
                 "y"
